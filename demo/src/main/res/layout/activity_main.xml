<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <cn.dawnyu.view.library.CountdownView
        android:id="@+id/countdownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cus:isSuffixTextBold="true"
        cus:isTimeTextBold="true"
        cus:suffixBackground="@color/colorPrimary"
        cus:suffixTextColor="@android:color/white"
        cus:suffixBackgroundPaddingTop="3dp"
        cus:suffixBackgroundPaddingRight="5dp"
        cus:suffixTextMargin="2dp"
        cus:suffixTextSize="20sp"
        cus:timeBackground="@color/colorAccent"
        cus:timeBackgroundPadding="5dp"
        cus:timeTextColor="@android:color/white"
        cus:timeTextLetterBackgroundSpacing="3dp"
        cus:timeTextSize="20sp" />

</LinearLayout>
